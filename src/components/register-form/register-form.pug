include ../input-field/input-field.pug
include ../radio-buttons/radio-buttons.pug

form.register-form
  h2.register-form__header.header--first Регистрация аккаунта
  .register-form__input.register-form__input--first-name
    + input-field("new-user-first-name", "first-name", "Имя")
  .register-form__input.register-form__input--last-name
    + input-field("new-user-last-name", "last-name", "Фамилия")
  .register-form__radio-buttons
    + radio-buttons("gender", "male", "Мужчина", "female", "Женщина")
  .register-form__label.header--third Дата рождения
  .register-form__input.register-form__input--birthday
    + input-field("new-user-birthday", "birthday", "ДД.ММ.ГГГГ")
    .register-form__subtitle Дату вводите в формате "ДД.ММ.ГГГГ"
  .register-form__label.header--third Данные для входа в сервис
  .register-form__input.register-form__input--email
    + input-field("new-user-email", "email", "Email")
  .register-form__input.register-form__input--password
    + input-field("new-user-password", "password", "Пароль")
  .register-form__toggle
    .toggle
      input(type="checkbox" id="toggle-checkbox").toggle__input
      .toggle__slider
      label.toggle__label(for="toggle-checkbox") Получать спецпредложения
