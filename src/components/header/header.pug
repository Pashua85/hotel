include ../button/button.pug
include ../logo/logo.pug

mixin header(isLoggedIn, userName)
  - isLoggedIn = isLoggedIn || false;
  - userName = userName || 'Гость'
  header(class="header")
    .header__container
      + logo('header__logo')
      nav.header__nav
        ul.header__nav-list
          li.header__nav-item
            a.header__nav-link(href="empty-page.html") О нас
          li.header__nav-item.header__nav-item--expandable
            a.header__nav-toggle.header__nav-link(href="empty-page.html") Услуги
            ul.header__expand-list
              li.header__expand-item
                a.header__expand-link(href="empty-page.html") Услуга 1
              li.header__expand-item
                a.header__expand-link(href="empty-page.html") Услуга 2
              li.header__expand-item
                a.header__expand-link(href="empty-page.html") Услуга 3
              li.header__expand-item
                a.header__expand-link(href="empty-page.html") Услуга 4
          li.header__nav-item
            a.header__nav-link(href="empty-page.html") Вакансии
          li.header__nav-item
            a.header__nav-link(href="empty-page.html") Новости
          li.header__nav-item.header__nav-item--expandable
            a.header__nav-toggle.header__nav-link(href="empty-page.html") Соглашения
            ul.header__expand-list
              li.header__expand-item
                a.header__expand-link(href="empty-page.html") Соглашение 1
              li.header__expand-item
                a.header__expand-link(href="empty-page.html") Соглашение 2
              li.header__expand-item
                a.header__expand-link(href="empty-page.html") Соглашение 3
      if !isLoggedIn 
        .header__user-block--unlogged
          a.header__link(href="sign-in.html")
            + button('Войти', 'white', 'low', 'narrow', 'button')
          a.header__link(href="register.html")
            + button('Зарегистрироваться', 'blue', 'low', 'narrow', 'button')
      if isLoggedIn
        .header__user-block--logged= userName
  script
    include header.js


            



